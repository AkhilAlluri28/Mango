@using Mango.Web.Models.Auth

@model RegistrationRequestDto

<form method="post">
    <div class="row text-center">
        <h1>Register</h1>
    </div>
    <div class="row text-center">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input asp-for="Name" class="form-control" placeholder="Name..." />
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input asp-for="Email" class="form-control" placeholder="Email..." />
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input asp-for="Password" class="form-control" placeholder="Password..." />
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number..." />
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <button asp-action="SubmitRegister" type="submit" class="form-control btn btn-success" value="submit">Register</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
